                <!-- إضافة سكربت الجافا سكريبت للتعامل مع الإرسال باستخدام AJAX -->
                <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                <script>
                    $(document).ready(function () {
                        $('#contactForm').on('submit', function (e) {
                            e.preventDefault(); // منع إعادة تحميل الصفحة

                            $.ajax({
                                type: 'POST',
                                url: '/Home/SendEmail',
                                data: $(this).serialize(), // إرسال بيانات النموذج
                                beforeSend: function () {
                                    $('.loading').show(); // إظهار الرسالة "Loading" قبل الإرسال
                                    $('.sent-message, .error-message').hide(); // إخفاء أي رسائل سابقة
                                },
                                success: function (response) {
                                    $('.loading').hide(); // إخفاء الرسالة "Loading"
                                    if (response.success) {
                                        $('.sent-message').text(response.message).show(); // عرض رسالة النجاح
                                        $('#contactForm')[0].reset(); // تفريغ الحقول بعد النجاح
                                    } else {
                                        $('.error-message').text(response.message).show(); // عرض رسالة الخطأ
                                    }
                                },
                                error: function () {
                                    $('.loading').hide(); // إخفاء الرسالة "Loading"
                                    $('.error-message').text('There was an error sending your message. Please try again later.').show(); // عرض رسالة الخطأ
                                }
                            });
                        });
                    });
                </script>
